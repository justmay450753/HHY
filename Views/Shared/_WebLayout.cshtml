    <link href="~/css/index.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div id="app" class="row">
            <nav class="navbar navbar-expand-md fixed-top  header">
                <a class="col-4 navbar-brand logo" href="/"><img src="~/images/logo.png" alt="logo" /></a>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link type="text/css" rel="stylesheet" href="//unpkg.com/bootstrap-vue@latest/dist/bootstrap-vue.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@voerro/vue-tagsinput@2.0.2/dist/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/css/tempusdominus-bootstrap-4.min.css" />
    <link href="~/css/fontawesome.css" rel="stylesheet" />
    <link href="~/css/admin.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <header class="admin-header py-3">
            <div class="row flex-nowrap justify-content-between align-items-center">
                <div class="col-4 pt-1">

                </div>
                <div class="col-4 text-center logo">
                    <a class="admin-header-logo text-dark" href="#"><img src="~/images/logo.png" /></a>
                </div>
                <div class="col-4 d-flex justify-content-end align-items-center">

                </div>
            </div>
        </header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="col-md-12 navbar-nav">
                    <li class="col-md-2 nav-item active">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="col-md-2 nav-item">
                        <a class="nav-link" asp-controller="Menus" asp-action="Index">前台分類</a>
                    </li>
                    <li class="col-md-2 nav-item">
                        <a class="nav-link" asp-controller="Members" asp-action="Index">後台管理人員</a>
                    </li>
                    <li class="col-md-2 nav-item">
                        <a class="nav-link" asp-controller="Products" asp-action="Index">商品設定</a>
                    </li>
                    <li class="col-md-2 nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            所有廣告
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" asp-controller="KeyVisuals" asp-action="Index">輪播Banner</a>
                            <a class="dropdown-item" asp-controller="SeasonalActivities" asp-action="Index">活動跑馬燈</a>
                            <a class="dropdown-item" asp-controller="HotSaleProducts" asp-action="Index">熱銷商品</a>
                            <a class="dropdown-item" asp-controller="Abouts" asp-action="Index">靜態頁面</a>
                            <a class="dropdown-item" asp-controller="Blogs" asp-action="Index">部落格推薦</a>
                            <a class="dropdown-item" asp-controller="ProductBanners" asp-action="Index">商品列表Banner</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Members" asp-action="Logout">登出</a>
                    </li>
                </ul>
            </div>
        </nav>
        @RenderBody()
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.6.10/vue.js"></script>
    <script src="//unpkg.com/vue@latest/dist/vue.min.js"></script>
    <script src="//unpkg.com/bootstrap-vue@latest/dist/bootstrap-vue.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/linq.js/2.2.0.2/linq.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.9.0/feather.min.js"></script>
    <script src="//cdn.ckeditor.com/4.12.1/standard/ckeditor.js"></script>
    <script src="https://unpkg.com/http-vue-loader@1.4.0/src/httpVueLoader.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
    <script src="~/js/dashboard.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/js/tempusdominus-bootstrap-4.min.js"></script>
    @RenderSection("ScriptBlock", false)
</body>
</html>

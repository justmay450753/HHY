@model IEnumerable<HHY.Models.CommonModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>前台分類列表</h2>
<div id="app">

    <p>
        <a :href='"/Menus/Create"'>Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Url)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsProductPromotion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PublishDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DownDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            <tr v-for="item in Data">
                <td>
                    {{item.title}}
                </td>
                <td>
                    {{item.url}}
                </td>
                <td>
                    {{item.isProductPromotion == true ? "是" : "否"}}
                </td>
                <td>
                    {{item.publishDate}}
                </td>
                <td>
                    {{item.downDate}}
                </td>
                <td>
                    <a :href="'/Menus/Edit?id=' + item.id">Edit</a> |
                    <a v-on:click="deleteMenu(item)" style="cursor:pointer">Delete</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
@section ScriptBlock{
    <script>
        new Vue({
            el: '#app',
            data: function () {
                return {
                    Data: []
                }
            },
            mounted: function () {
                this.getMenu();
            },
            methods: {
                getMenu: function () {
                    var self = this;
                    $.get("/api/admin/getmenu")
                        .done(function (result) {
                            self.Data = result;
                        })
                        .fail(function (xhr) {
                            alert(xhr.responseJSON.Message);
                        });
                },
                deleteMenu: function (item) {
                    if (!confirm("確定刪除嗎?")) {
                        return;
                    }
                    var self = this;
                    $.ajax({
                        type: 'Delete',
                        url: '/api/admin/delmenu?id=' + item.id,
                        success: function () {
                            self.getMenu();
                        },
                        error: function (xhr, textStatus, error) {
                            alert(xhr.responseJSON.Message);
                        }
                    });
                }
            }
        })
    </script>
}